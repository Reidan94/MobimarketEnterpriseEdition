
<h2>Add Contact</h2>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("ManageContactAdding", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">

                <div class="form-group">
                    <label class="control-label col-md-2" for="Type">Type</label>
                    <div class="col-md-2">
                        <select name="Type">
                            <option value="1">Facebook</option>
                            <option value="2">LinkedIn</option>
                            <option value="3">Phone</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" for="Text">Contact</label>
                    <div class="col-md-2">
                        <input class="form-control" id="Text" name="Text" type="text" placeholder="Contact" required="required">
                    </div>
                </div>

                <input class="form-control" id="enterpriseId" name="enterpriseId" type="hidden" value="@ViewBag.EntId" required="required">


                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default btn-outline " />
                        <button type="button" class="btn  btn-success link-button" style="background-color:white">@Html.ActionLink("Back", "GetConcepts", "Search")</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>