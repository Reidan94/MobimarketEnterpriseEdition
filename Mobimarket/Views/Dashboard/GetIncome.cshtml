@section Scripts
{
    <script>

        var productsImage = '/Images/Clients/';
        var colors = ['red', 'orange', 'yellow', 'blue', '#00FFFF', 'green', '#00FF00'];

        function loadServices() {
            $.ajax({
                url: "/Api/GetIncome",
                type: "post",
                async: false,
                success: function (data) {
                    $("#income_body").empty();
                    console.log('Api/GetIncome done!');
                    console.log(data.length);

                    for (var i = 0; i < data.length; i++) {
                        var dateTd = '<td>' + data[i].Date + '</td>';
                        var incomeTd = '<td>' + data[i].Income + ' $</td>';

                        var tr = '<tr>' + dateTd + incomeTd + '</td>';
                        $("#income_body").append(tr);
                    }
                }
            });
        }

        $(document).ready(function () {
            $('#dataTables-example').dataTable();
            $("#dataTables-example_info").empty();
            loadServices();
        });
    </script>
}
<h2>Services</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Income</th>
                            </tr>
                        </thead>
                        <tbody id="income_body"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>